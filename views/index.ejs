<%- include("./partials/header")  %>
<nav class="navbar navbar-light bg-light">
    <a class="navbar-brand" href="/">Todo CRUD App</a>
</nav>

<div class="container mt-5">
    <form action="/add/todo" method="POST" class="d-flex">
        <input type="text" name="todo" class="form-control" placeholder="Enter Todo">
        <input type="submit" value="Insert" class="btn btn-md btn-primary mx-2">
    </form>



    <ul class="list-group my-5">
    
       
        <% todo.forEach(todos => { %>
        <li class="list-group-item">         
    

            

        <form action="/update/todo/<%= todos._id %>" method="POST" class="d-flex">
            <input type="text"   value="<%= todos.todo %>" name = "updateL" id = "updateL" >
            <input  type="submit" value="Update" class="btn btn-dark btn-sm">
            <p>             </p>
            <a href="/delete/todo/<%= todos._id %>"
                class="btn btn-danger btn-sm">Delete</a> 
        </form>  
                
            </li>

        <% }) %>

    </ul>

</div>





<%- include("./partials/footer")  %>